<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing"
    android:layout_marginTop="@dimen/card_spacing"
    android:layout_marginRight="@dimen/card_spacing"
    android:paddingBottom="@dimen/source_item_padding"
    android:paddingTop="@dimen/source_item_padding"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/sourceTitle"
        style="@style/SwitcherLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingStart="@dimen/card_side_margin"
        android:paddingEnd="@dimen/switch_title_end_margin"
        tools:text="@tools:sample/lorem" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sourceDesc"
        style="@style/SwitcherDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:paddingStart="@dimen/card_side_margin"
        android:paddingEnd="@dimen/card_side_margin"
        app:switchPadding="@dimen/switch_text_margin"
        tools:text="@tools:sample/lorem/random" />

</LinearLayout>